<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iconoMedico"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_doctor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/NombreDoctorTV" />

    <TextView
        android:id="@+id/TituloDoctorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Dr."
        android:textColor="@color/negro"
        android:textSize="@dimen/titulos"
        app:layout_constraintStart_toEndOf="@+id/iconoMedico"
        app:layout_constraintTop_toTopOf="@+id/NombreDoctorTV" />

    <TextView
        android:id="@+id/NombreDoctorTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Eduardo Corona"
        android:textColor="@color/negro"

        android:textSize="@dimen/titulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/TituloDoctorTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EspecialidadTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Cardiologo"
        android:textSize="@dimen/subtitulos"

        app:layout_constraintStart_toEndOf="@+id/iconoMedico"
        app:layout_constraintTop_toBottomOf="@+id/NombreDoctorTV" />

    <TextView
        android:id="@+id/TelefonoDoctorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="2229261293"
        android:textColor="@color/negro"
        android:textSize="@dimen/subtitulos"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/telefonoIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/telefonoIV" />

    <ImageView
        android:id="@+id/telefonoIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_phone_black_24dp"
        android:tint="@color/colorPrimaryLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TelefonoDoctorTV"
        app:layout_constraintTop_toBottomOf="@+id/EspecialidadTV" />

</android.support.constraint.ConstraintLayout>