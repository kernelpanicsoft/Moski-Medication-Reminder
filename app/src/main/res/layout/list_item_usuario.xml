<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/UsuarioIV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_user"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NombreUsuarioTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Eduardo"
        android:textColor="@color/grisOscuro"
        android:textSize="@dimen/titulos"
        app:layout_constraintStart_toEndOf="@+id/UsuarioIV"
        app:layout_constraintTop_toTopOf="@+id/UsuarioIV" />

    <TextView
        android:id="@+id/ApellidosUsuarioTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Corona Hernandez"
        android:textColor="@color/grisOscuro"
        android:textSize="@dimen/subtitulos"
        app:layout_constraintBottom_toBottomOf="@+id/UsuarioIV"
        app:layout_constraintStart_toStartOf="@+id/NombreUsuarioTV"
        app:layout_constraintTop_toBottomOf="@+id/NombreUsuarioTV" />

</android.support.constraint.ConstraintLayout>