<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kps.spart.moskimedicationreminder.DetallesMedicoActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grisClaro"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iconoMedico"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_doctor"
                        android:tint="@color/blanco"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/NombreDoctorTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iconoMedico"
                        android:layout_centerHorizontal="true"
                        android:text="Eduardo Corona Díaz"
                        android:textColor="@color/blanco"
                        android:textSize="@dimen/titulos"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/TituloDoctorTV"
                        app:layout_constraintTop_toBottomOf="@+id/iconoMedico" />

                    <TextView
                        android:id="@+id/TituloDoctorTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="Dr."
                        android:textColor="@color/blanco"
                        android:textSize="@dimen/titulos"
                        app:layout_constraintEnd_toStartOf="@+id/NombreDoctorTV"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iconoMedico" />

                    <TextView
                        android:id="@+id/EspecialidadTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:text="Cardiólogo"
                        android:textColor="@color/grisClaro"
                        android:textSize="@dimen/subtitulos"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.502"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/NombreDoctorTV" />


                </android.support.constraint.ConstraintLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="18dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView1">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tituloFichaContactoTV"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Consultorio particular"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/subtitulos"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iconoDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_placeholder"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tituloFichaContactoTV" />

                    <TextView
                        android:id="@+id/direccionMedicoTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:text="14A Sur 6703, Colonia Villa Universitaria Puebla, Puebla"
                        android:textColor="@color/grisOscuro"
                        android:textSize="@dimen/normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iconoDireccion"
                        app:layout_constraintTop_toTopOf="@+id/iconoDireccion" />


                    <ImageView
                        android:id="@+id/Iconotelefono1IV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"

                        android:src="@drawable/ic_phone_black_24dp"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/direccionMedicoTV" />

                    <TextView
                        android:id="@+id/telefono1id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="2414176496"
                        android:textColor="@color/grisOscuro"
                        android:textSize="@dimen/normal"
                        app:layout_constraintBottom_toBottomOf="@+id/Iconotelefono1IV"
                        app:layout_constraintStart_toEndOf="@+id/Iconotelefono1IV"
                        app:layout_constraintTop_toTopOf="@+id/Iconotelefono1IV" />

                    <ImageView
                        android:id="@+id/Iconotelefono2IV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_smartphone"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/telefono1id" />

                    <TextView
                        android:id="@+id/telefono2TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="2229261293"
                        android:textColor="@color/grisOscuro"
                        android:textSize="@dimen/normal"
                        app:layout_constraintBottom_toBottomOf="@+id/Iconotelefono2IV"
                        app:layout_constraintStart_toEndOf="@+id/Iconotelefono2IV"
                        app:layout_constraintTop_toTopOf="@+id/Iconotelefono2IV" />


                    <ImageView
                        android:id="@+id/iconoEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_email"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/telefono2TV" />

                    <TextView
                        android:id="@+id/emailTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="c.eduardo.corona@gmail.com"
                        android:textColor="@color/grisOscuro"
                        android:textSize="@dimen/normal"
                        app:layout_constraintBottom_toBottomOf="@+id/iconoEmail"
                        app:layout_constraintStart_toEndOf="@+id/iconoEmail"
                        app:layout_constraintTop_toTopOf="@+id/iconoEmail" />

                    <ImageView
                        android:id="@+id/iconoWebSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_web"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/emailTV" />

                    <TextView
                        android:id="@+id/websiteTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="http://kernelpanicsoft.com"
                        android:textColor="@color/grisOscuro"
                        android:textSize="@dimen/normal"
                        app:layout_constraintBottom_toBottomOf="@+id/iconoWebSite"
                        app:layout_constraintStart_toEndOf="@+id/iconoWebSite"
                        app:layout_constraintTop_toTopOf="@+id/iconoWebSite" />

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:tint="@color/colorPrimaryDark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_star_black_24dp" />
                </android.support.constraint.ConstraintLayout>


            </android.support.v7.widget.CardView>




        </android.support.constraint.ConstraintLayout>
    </ScrollView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/cardView1"
        app:layout_anchorGravity="bottom|center">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/quickActionPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_phone_black_24dp"
                android:tint="@color/colorPrimaryLight"
                app:layout_constraintEnd_toStartOf="@+id/quickActionMail"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/quickActionMail" />

            <ImageView
                android:id="@+id/quickActionMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_email"
                android:tint="@color/colorPrimaryLight"
                app:layout_constraintEnd_toStartOf="@+id/quickActionDate"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/quickActionPhone"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/quickActionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_calendar_date"
                android:tint="@color/colorPrimaryLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/quickActionMail"
                app:layout_constraintTop_toTopOf="@+id/quickActionMail" />


            <TextView
                android:id="@+id/quickActionPhoneTV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:text="Llamar"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/quickActionPhone"
                app:layout_constraintStart_toStartOf="@+id/quickActionPhone"
                app:layout_constraintTop_toBottomOf="@+id/quickActionPhone" />

            <TextView
                android:id="@+id/quickActionMailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Enviar  Email"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/quickActionMail"
                app:layout_constraintStart_toStartOf="@+id/quickActionMail"
                app:layout_constraintTop_toBottomOf="@+id/quickActionMail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:text="Agendar Cita"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/quickActionDate"
                app:layout_constraintStart_toStartOf="@+id/quickActionDate"
                app:layout_constraintTop_toBottomOf="@+id/quickActionDate" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


    <!--
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar_date"
        app:layout_anchor="@id/cardView1"
        app:layout_anchorGravity="bottom|right"
        android:layout_margin="16dp"/>

        -->

</android.support.design.widget.CoordinatorLayout>
