<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tituloFichaContactoTV"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Consultorio particular"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/subtitulos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iconoDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_placeholder"
                android:tint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tituloFichaContactoTV" />

            <TextView
                android:id="@+id/direccionMedicoTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="14A Sur 6703, Colonia Villa Universitaria Puebla, Puebla"
                android:textColor="@color/grisOscuro"
                android:textSize="@dimen/normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconoDireccion"
                app:layout_constraintTop_toTopOf="@+id/iconoDireccion" />


            <ImageView
                android:id="@+id/Iconotelefono1IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"

                android:src="@drawable/ic_phone_black_24dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/direccionMedicoTV" />

            <TextView
                android:id="@+id/telefono1id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2414176496"
                android:textColor="@color/grisOscuro"
                android:textSize="@dimen/normal"
                app:layout_constraintBottom_toBottomOf="@+id/Iconotelefono1IV"
                app:layout_constraintStart_toEndOf="@+id/Iconotelefono1IV"
                app:layout_constraintTop_toTopOf="@+id/Iconotelefono1IV" />

            <ImageView
                android:id="@+id/Iconotelefono2IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_smartphone"
                android:tint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telefono1id" />

            <TextView
                android:id="@+id/telefono2TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2229261293"
                android:textColor="@color/grisOscuro"
                android:textSize="@dimen/normal"
                app:layout_constraintBottom_toBottomOf="@+id/Iconotelefono2IV"
                app:layout_constraintStart_toEndOf="@+id/Iconotelefono2IV"
                app:layout_constraintTop_toTopOf="@+id/Iconotelefono2IV" />


            <ImageView
                android:id="@+id/iconoEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_email"
                android:tint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telefono2TV" />

            <TextView
                android:id="@+id/emailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="c.eduardo.corona@gmail.com"
                android:textColor="@color/grisOscuro"
                android:textSize="@dimen/normal"
                app:layout_constraintBottom_toBottomOf="@+id/iconoEmail"
                app:layout_constraintStart_toEndOf="@+id/iconoEmail"
                app:layout_constraintTop_toTopOf="@+id/iconoEmail" />

            <ImageView
                android:id="@+id/iconoWebSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_web"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTV" />

            <TextView
                android:id="@+id/websiteTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="http://kernelpanicsoft.com"
                android:textColor="@color/grisOscuro"
                android:textSize="@dimen/normal"
                app:layout_constraintBottom_toBottomOf="@+id/iconoWebSite"
                app:layout_constraintStart_toEndOf="@+id/iconoWebSite"
                app:layout_constraintTop_toTopOf="@+id/iconoWebSite" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_star_black_24dp" />
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>