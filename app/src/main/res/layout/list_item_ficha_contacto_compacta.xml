<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconoFicha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_tag_title"
                app:layout_constraintBottom_toBottomOf="@+id/tituloFichaContactoCompactaTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tituloFichaContactoCompactaTV"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tituloFichaContactoCompactaTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Consultorio Particular de prueba"
                android:textSize="@dimen/subtitulos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconoFicha"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/eliminarFCCTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="ELIMINAR"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/normal"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/editarFCCTV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editarFCCTV" />

            <TextView
                android:id="@+id/editarFCCTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:text="EDITAR"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/normal"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/eliminarFCCTV"
                app:layout_constraintTop_toBottomOf="@+id/tituloFichaContactoCompactaTV" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
